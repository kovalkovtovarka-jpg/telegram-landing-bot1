# Скопируйте в .env и заполните значения. В .env не коммитьте в Git.

# === Обязательные ===
TELEGRAM_BOT_TOKEN=
DATABASE_URL=sqlite:///landing_bot.db
# Ключ в зависимости от LLM_PROVIDER:
OPENAI_API_KEY=
# ANTHROPIC_API_KEY=
# GOOGLE_API_KEY=

# === LLM (по умолчанию) ===
LLM_PROVIDER=openai
LLM_MODEL=gpt-4o
LLM_TEMPERATURE=0.3
LLM_MAX_TOKENS=8000
LLM_TIMEOUT=120
LLM_MAX_RETRIES=3
LLM_RETRY_DELAY=2.0

# === Бот ===
BOT_ADMIN_IDS=
NOTIFY_ADMINS_ON_STARTUP=

# === Файлы и лимиты ===
FILES_DIR=generated_landings
MAX_FILE_SIZE=10485760
MAX_REQUESTS_PER_HOUR=10

# === Webhook (для деплоя на Railway и т.п.) ===
# WEBHOOK_URL=https://your-app.railway.app
# PORT=8443
# WEBHOOK_PORT=8443

# === Логирование ===
LOG_LEVEL=INFO
LOG_FILE=bot.log

# === AI-агент ===
AI_AGENT_TIMEOUT=1800
AI_AGENT_INACTIVITY_TIMEOUT=3600
MAX_PROMPT_LENGTH=15000
